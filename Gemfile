# Gemfile for Jekyll Docs as Code project

source "https://rubygems.org"

# Specify the version of Ruby you are using (optional but recommended for CI/CD consistency)
# ruby "3.2.2" 

# CORE BUILD
# Use the modern version of Jekyll (e.g., 4.3). This is the version you want locally.
gem "jekyll", "~> 4.3"

# PLUGINS - Specify these individually, as they are GitHub Pages compatible
# These plugins are typically bundled inside the 'github-pages' gem, but listing
# them individually avoids the version conflict.
gem "jekyll-sitemap"
gem "jekyll-feed"
gem "jekyll-seo-tag"
gem "jekyll-gist"
gem "jekyll-mentions"
gem "jekyll-redirect-from"
gem "jekyll-relative-links"
gem "jekyll-sass-converter", "~> 2.1" 

# Optional: Add the theme you plan to customize
gem "minima", "~> 2.5"
